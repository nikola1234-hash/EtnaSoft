<UserControl
    x:Class="EtnaSoft.WPF.Views.SmsServiceDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:local="clr-namespace:EtnaSoft.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <dxlc:LayoutControl>
        <dxlc:LayoutGroup HorizontalAlignment="Center" Orientation="Vertical">
            <dxlc:LayoutItem HorizontalAlignment="Center" Label="URL:">
                <dxe:TextEdit Width="300" Text="{Binding Url}" />
            </dxlc:LayoutItem>
            <dxlc:LayoutItem HorizontalAlignment="Center" Label="User:">
                <dxe:TextEdit Width="300" Text="{Binding Username}" />
            </dxlc:LayoutItem>
            <dxlc:LayoutItem HorizontalAlignment="Center" Label="Pass:">
                <dxe:TextEdit Width="300" Text="{Binding Secret}" />
            </dxlc:LayoutItem>

        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</UserControl>
