<UserControl
    x:Class="EtnaSoft.WPF.Views.DialogServiceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:local="clr-namespace:EtnaSoft.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name: " />
                <dxe:TextEdit
                    Width="200"
                    EditValue="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                    ValidateOnTextInput="True" />
            </StackPanel>
            <dxe:CheckEdit Content="Can Close Dialog" EditValue="{Binding AllowCloseDialog}" />
        </StackPanel>
    </Grid>
</UserControl>
